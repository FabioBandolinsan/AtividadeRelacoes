import java.util.ArrayList;
import java.util.List;

public class Navegador {

	private String marca;

	private List<Website> lweb = new ArrayList<Website>();
	
	public boolean addWebsite(String link) {
		Website web= new Website(link); 
		return lweb.add(web);
	}
	
	public String getMarca() {
		return marca;
	}

	public void setMarca(String marca) {
		if(marca.length()>0)
			this.marca = marca;
	}

	@Override
	public String toString() {
		StringBuilder builder = new StringBuilder();
		builder.append("Navegador [marca=");
		builder.append(marca);
		builder.append("]");
		for(Website web:lweb) {
			builder.append(web.toString());
		}
		return builder.toString();
	}
	
	
}
